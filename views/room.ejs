<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/static/css/styles.css">
    <%- include('partials/head.ejs') %>
    <script src="/static/room.js"></script>
    <script>
        window.ROOM = "<%= room.id %>";
        window.WSHOST = "<%= ws.host %>";
    </script>
</head>
<body>

<main>
    <h1>Room <%= room.id %></h1>
    <p>Welcome to templating using EJS</p>

    <form id="nameform" onsubmit="return getPlayerName(event)">
        <input name="playername" id="playername" type="text">
        <input type="submit" value="Join"></input>
    </form>

    <p id="phase"></p>
    <p id="players"></p>

    <button id="startgame" style="display:none">Start</button>
    <button id="stopgame" style="display:none">Stop</button>
</main>

</body>
</html>
